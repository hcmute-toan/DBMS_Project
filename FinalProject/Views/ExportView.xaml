<Window x:Class="FinalProject.Views.ExportView"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Export View" Height="450" Width="800">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Input Fields -->
			<RowDefinition Height="Auto"/>
			<!-- Buttons -->
			<RowDefinition Height="*"/>
			<!-- DataGrid -->
		</Grid.RowDefinitions>

		<!-- Input Fields -->
		<Grid Grid.Row="0" Margin="0,0,0,10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="2*"/>
				<ColumnDefinition Width="2*"/>
				<ColumnDefinition Width="2*"/>
				<ColumnDefinition Width="2*"/>
			</Grid.ColumnDefinitions>

			<!-- Ngày xuất -->
			<StackPanel Grid.Column="0">
				<TextBlock Text="Ngày xuất" FontWeight="Bold"/>
				<DatePicker SelectedDate="{Binding ExportDate, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
			</StackPanel>

			<!-- Mục đích -->
			<StackPanel Grid.Column="1">
				<TextBlock Text="Mục đích" FontWeight="Bold"/>
				<TextBox Text="{Binding Purpose, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
			</StackPanel>

			<!-- Khách hàng -->
			<StackPanel Grid.Column="2">
				<TextBlock Text="Khách hàng" FontWeight="Bold"/>
				<ComboBox ItemsSource="{Binding CustomerList}"
                          SelectedValue="{Binding CustomerId}"
                          DisplayMemberPath="CustomerName"
                          SelectedValuePath="CustomerId"
                          Margin="0,5"/>
			</StackPanel>

			<!-- Kho -->
			<StackPanel Grid.Column="3">
				<TextBlock Text="Kho" FontWeight="Bold"/>
				<ComboBox ItemsSource="{Binding WarehouseList}"
                          SelectedValue="{Binding WarehouseId}"
                          DisplayMemberPath="WarehouseName"
                          SelectedValuePath="WarehouseId"
                          Margin="0,5"/>
			</StackPanel>
		</Grid>

		<!-- Buttons -->
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
			<Button Content="Thêm" Width="80" Margin="5" Command="{Binding AddCommand}" />
			<Button Content="Xóa" Width="80" Margin="5" Command="{Binding DeleteCommand}" />
			<Button Content="Sửa" Width="80" Margin="5" Command="{Binding EditCommand}" />
		</StackPanel>

		<!-- DataGrid -->
		<DataGrid Grid.Row="2" ItemsSource="{Binding ExportList}"
                  SelectedItem="{Binding SelectedExport}"
                  AutoGenerateColumns="False" CanUserAddRows="False">
			<DataGrid.Columns>
				<DataGridTextColumn Header="ID" Binding="{Binding ExportId}" Width="Auto"/>
				<DataGridTextColumn Header="Ngày xuất" Binding="{Binding ExportDate, StringFormat=d}" Width="*"/>
				<DataGridTextColumn Header="Mục đích" Binding="{Binding Purpose}" Width="*"/>
				<DataGridTextColumn Header="Khách hàng ID" Binding="{Binding CustomerId}" Width="*"/>
				<DataGridTextColumn Header="Kho ID" Binding="{Binding WarehouseId}" Width="*"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Window>
