<Window x:Class="FinalProject.Homepage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FinalProject"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewmodels="clr-namespace:FinalProject.ViewModels"
        Title="Phần mềm xuất/nhập Laptop" Height="450" Width="800">

    <Window.DataContext>
        <viewmodels:HomepageViewModel/>
    </Window.DataContext>

    <Grid Background="WhiteSmoke">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="150"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Menu bên trái -->
		<StackPanel Background="LightGray" Grid.Column="0">
			<Button x:Name="btnNhapKho" Content="Nhập kho" Margin="0 5" Height="40" Background="SteelBlue" Foreground="White"/>
            
			<Button x:Name="btnXuatKho" Content="Xuất kho" Margin="0 5" Height="40" Background="SteelBlue" Foreground="White"/>
            
			<Button x:Name="btnNhaCungCap" Content="Nhà cung cấp" Margin="0 5" Height="40" Background="SteelBlue" Foreground="White"
                    Command="{Binding ShowSupplierViewCommand}"/> 
            
			<Button x:Name="btnKhachHang" Content="Khách hàng" Margin="0 5" Height="40" Background="SteelBlue" Foreground="White"/>
            
			<Button x:Name="btnNhanVien" Content="Nhân viên" Margin="0 5" Height="40" Background="SteelBlue" Foreground="White"/>

            
        </StackPanel>
        
        <ContentControl Content="{Binding CurrentView}" Margin="10"/>

		<!-- Nội dung chính -->
		<StackPanel Grid.Column="1" Margin="10">
			<!-- Thống kê -->
			<GroupBox Header="Thống kê" Margin="0 0 0 10">
				<Grid Margin="10">
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition/>
						<ColumnDefinition/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>

					<StackPanel Grid.Column="0">
						<TextBlock Text="Số lượng nhập:"/>
						<TextBox Height="25"/>
					</StackPanel>

					<StackPanel Grid.Column="1" Margin="10 0">
						<TextBlock Text="Số lượng xuất:"/>
						<TextBox Height="25"/>
					</StackPanel>

					<StackPanel Grid.Column="2">
						<TextBlock Text="Số lượng tồn kho:"/>
						<TextBox Height="25"/>
					</StackPanel>

					<Button Content="Lọc" Grid.Column="3" Width="60" Margin="10 20 0 0"/>
				</Grid>
			</GroupBox>
			<!-- Danh sách vật tư -->
			<GroupBox Header="Tồn kho vật tư">
				<Grid Margin="10">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition/>
					</Grid.RowDefinitions>

					<!-- Bộ lọc -->
					<StackPanel Orientation="Horizontal" Margin="0 0 0 10">
						<TextBlock Text="Ngày bắt đầu:" VerticalAlignment="Center" Margin="0 0 5 0"/>
						<DatePicker Width="120" Margin="0 0 10 0"/>
						<TextBlock Text="Ngày kết thúc:" VerticalAlignment="Center" Margin="0 0 5 0"/>
						<DatePicker Width="120" Margin="0 0 10 0"/>
						<Button Content="Lọc" Width="60"/>
					</StackPanel>

					<!-- Bảng -->
					<DataGrid Grid.Row="1" AutoGenerateColumns="False">
						<DataGrid.Columns>
							<DataGridTextColumn Header="STT" Width="50"/>
							<DataGridTextColumn Header="Tên vật tư" Width="*"/>
							<DataGridTextColumn Header="Số lượng tồn" Width="150"/>
						</DataGrid.Columns>
					</DataGrid>
				</Grid>
			</GroupBox>
		</StackPanel>
	</Grid>
</Window>