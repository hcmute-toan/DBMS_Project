<Window x:Class="FinalProject.Views.CustomerView"  
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
       Title="Customer View" Height="350" Width="628">  
   <Grid>
	   <Border BorderBrush="Black" BorderThickness="1" Margin="10" Padding="10">
		   <Grid>
			   <Grid.RowDefinitions>
				   <RowDefinition Height="Auto"/>
				   <RowDefinition Height="Auto"/>
				   <RowDefinition Height="*"/>
			   </Grid.RowDefinitions>

			   <!-- Input Fields -->
			   <Grid Grid.Row="0" Margin="0,0,0,10">
				   <Grid.ColumnDefinitions>
					   <ColumnDefinition Width="2*"/>
					   <ColumnDefinition Width="2*"/>
					   <ColumnDefinition Width="2*"/>
					   <ColumnDefinition Width="2*"/>
					   <ColumnDefinition Width="2*"/>
				   </Grid.ColumnDefinitions>

				   <!-- Tên khách hàng -->
				   <StackPanel Grid.Column="0">
					   <TextBlock Text="Tên khách hàng" FontWeight="Bold"/>
					   <TextBox Text="{Binding CustomerName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
				   </StackPanel>

				   <!-- Số điện thoại -->
				   <StackPanel Grid.Column="1">
					   <TextBlock Text="Số điện thoại" FontWeight="Bold"/>
					   <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
				   </StackPanel>

				   <!-- Email -->
				   <StackPanel Grid.Column="2">
					   <TextBlock Text="Email" FontWeight="Bold"/>
					   <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
				   </StackPanel>

				   <!-- Địa chỉ -->
				   <StackPanel Grid.Column="3">
					   <TextBlock Text="Địa chỉ" FontWeight="Bold"/>
					   <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
				   </StackPanel>

				   <!-- Ngày nhập -->
				   <StackPanel Grid.Column="4">
					   <TextBlock Text="Ngày nhập" FontWeight="Bold"/>
					   <DatePicker SelectedDate="{Binding EntryDate, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
				   </StackPanel>

			   </Grid>

			   <!-- Buttons -->
			   <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
				   <Button Content="Thêm" Width="80" Margin="5" Command="{Binding AddCommand}" />
				   <Button Content="Xóa" Width="80" Margin="5" Command="{Binding DeleteCommand}" />
				   <Button Content="Sửa" Width="80" Margin="5" Command="{Binding EditCommand}" />
			   </StackPanel>

			   <!-- DataGrid -->
			   <DataGrid Grid.Row="2" ItemsSource="{Binding SupplierList}"
						 SelectedItem="{Binding SelectedSupplier}"
						 AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,10,0,0">
				   <DataGrid.Columns>
					   <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto"/>
					   <DataGridTextColumn Header="Tên khách hàng" Binding="{Binding SupplierName}" Width="*"/>
					   <DataGridTextColumn Header="Số điện thoại" Binding="{Binding PhoneNumber}" Width="*"/>
					   <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
					   <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="*"/>
				   </DataGrid.Columns>
			   </DataGrid>
		   </Grid>
	   </Border>
   </Grid>  
</Window>
